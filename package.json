{
  "name": "onesift",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:init": "tsx src/db/migrate.ts init",
    "db:migrate": "tsx src/db/migrate.ts migrate",
    "db:setup": "tsx src/db/migrate.ts full",
    "db:seed": "tsx src/db/seed.ts",
    "worker": "tsx src/workers/index.ts",
    "worker:dev": "tsx watch src/workers/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --coverage --watchAll=false",
    "lint": "echo 'Linting not configured yet'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "bullmq": "^4.14.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.29.1",
    "fast-xml-parser": "^5.2.3",
    "fastify": "^4.25.1",
    "form-data": "^4.0.2",
    "ioredis": "^5.6.1",
    "mailgun.js": "^9.4.1",
    "openai": "^4.24.1",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.57",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "esbuild": "^0.25.5"
  }
}
